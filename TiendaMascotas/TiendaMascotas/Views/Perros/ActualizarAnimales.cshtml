@model TiendaMascotas.Entities.AnimalesEnt
@{
    ViewBag.Title = "ActualizarAnimales";
    Layout = "~/Views/Shared/LayoutProducts.cshtml";
}

<div class="top-header-area" id="sticker">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-sm-12 text-center">
                <div class="main-menu-wrap">
                    <!-- menu start -->
                    <nav class="main-menu">
                        <ul>
                            <li class="current-list-item">
                                <a href="@Url.Action("Index", "Home")">INICIO</a>
                            </li>
                            <li>
                                @if (Session["NombreUsuario"] != null)
                                {
                                    <p style="color:#FFFFFF">@Session["NombreUsuario"].ToString()</p>
                                }
                            </li>
                            <li>
                                <div class="header-icons">
                                </div>
                            </li>
                        </ul>
                    </nav>
                    <a class="mobile-show search-bar-icon" href="#"><i class="fas fa-search"></i></a>
                    <div class="mobile-menu"></div>
                    <!-- menu end -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end header -->
<!-- search area -->
<div class="search-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <span class="close-btn"><i class="fas fa-window-close"></i></span>
                <div class="search-bar">
                    <div class="search-bar-tablecell">
                        <h3>Buscar:</h3>
                        <input type="text" placeholder="Escriba palabras claves">
                        <button type="submit">Buscar <i class="fas fa-search"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end search arewa -->
<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Actualizar</p>
                    <h1>perritos</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->
<!-- products -->
<div class="product-section mt-100 mb-150">
    <div class="container">

        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">

                <h2>Ingrese los datos nuevos del perro que desea actualizar</h2>
                <br>
                <br>

                @using (Html.BeginForm("ActualizarAnimales", "Perros", FormMethod.Post, new { enctype = "multipart/form-data", @class = "pt-3" }))
                {

                    @Html.HiddenFor(Model => Model.idAnimal)

                    <!-- corregir diseño inputs, seguir trabajando en crud-->
                    <div class="form-group col-lg-8 offset-lg-2 text-center">
                        @Html.TextBoxFor(Model => Model.Nombre, new
                        {
                           @class = "form-control form-control-lg",
                           @placeholder = "Nombre del animal",
                           @autocomplete = "Off",
                           @required = true
                        })
                    </div>
                    <br>
                    <div class="form-group col-lg-8 offset-lg-2 text-center">
                        @Html.DropDownListFor(Model => Model.tipoAnimal, ViewBag.ListadoAnimales as List<SelectListItem>, new
                        {
                            @class = "form-control form-control-lg",
                            @placeholder = "Seleccione el tipo de animal",
                            required = true
                        })

                        @*@Html.TextBoxFor(Model => Model.tipoAnimal, new
                        {
                            @placeholder = "Ingrese el tipo de animal",
                            @autocomplete = "Off",
                            @required = true
                        })*@

                    </div>
                    <br>
                    <div class="form-group col-lg-8 offset-lg-2 text-center">
                        @Html.TextBoxFor(Model => Model.Descripcion, new
                        {
                           @class = "form-control form-control-lg",
                           @placeholder = "Descripción",
                           @autocomplete = "Off",
                           @required = true
                        })
                    </div>
                    <br>
                    <div class="form-group col-lg-8 offset-lg-2 text-center">
                        @Html.LabelFor(Model => Model.imagen, new
                        {
                           @class = "control-label",
                           @placeholder = "Imagen del animal",
                           required = true
                        })
                        <div>
                            <input type="file" id="imagen1" name="imagen1" class="form-control form-control-lg" accept=".jpg,.jpeg,.png,.gif" required>
                        </div>
                    </div>
                    <br>
                    <div class="mt-3">

                        <br>
                        <br>
                        <div class="row">
                            <div class="col-lg-8 offset-lg-2 text-center">
                                <input type="submit" id="btnRegistrar" value="Registrar" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
                            </div>
                        </div>

                    </div>

                }
            </div>
        </div>

    </div>
</div>

