@model TiendaMascotas.Entities.UsuariosEnt

@{
    ViewBag.Title = "RecuperarContrasenna";
    Layout = "~/Views/Shared/Login.cshtml";
}

<h2>Tienda de mascotas</h2>

<div class="container" id="container">
    <div class="form-container sign-in-container">
        @using (Html.BeginForm("RecuperarContrasenna", "Home", FormMethod.Post))
        {
            <h1>Recuperar contraseña</h1>
            <span>Ingrese su nombre de usuario</span>
            @Html.TextBoxFor(Model => Model.CorreoElectronico, new
       {
           @placeholder = "Correo Electrónico",
           @autocomplete = "Off",
           @required = true,
           @type = "Email",
           @onblur = "RecuperarContrasenna();"
       })
            <input type="Submit" id="btnEnviar" disabled value="Enviar">
        }
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-right">
                <h1>Si desea volver</h1>
                <p>Click en el botón de abajo</p>
                <button><a href="@Url.Action("login", "Home")" class="ghost">Atrás</a></button>
            </div>
        </div>
    </div>
</div>

<script src="~/assets/js/RecuperarContrasenna.js"></script>