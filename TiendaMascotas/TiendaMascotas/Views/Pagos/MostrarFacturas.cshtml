@model IEnumerable<TiendaMascotas.Entities.PagosEnt>
@{
    ViewBag.Title = "MostrarFacturas";
    Layout = "~/Views/Shared/LayoutProducts.cshtml";
}

<link href="~/assets/css/productos.css" rel="stylesheet" type="text/css" />

<!-- end header -->
<!-- search area -->
<div class="search-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <span class="close-btn"><i class="fas fa-window-close"></i></span>
                <div class="search-bar">
                    <div class="search-bar-tablecell">
                        <h3>Buscar:</h3>
                        <input type="text" placeholder="Escriba palabras claves">
                        <button type="submit">Buscar <i class="fas fa-search"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end search arewa -->
<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <h1>Historial de Facturas</h1>
                    <p>De Compras Realizadas</p>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- end breadcrumb section -->



<div class="row">

    <div class="col-md-1 grid-margin stretch-card">
    </div>

    <div class="col-md-10 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Facturas Realizadas</h4>

                <table class="table table-hover" id="tablaFacturas">
                    <thead>
                        <tr>
                            <th>#Factura</th>
                            <th>Fecha</th>
                            <th>¢ Total</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdMaestro</td>
                                <td>@item.FechaCompra.ToString("dd/MM/yyyy")</td>
                                <td>@string.Format("{0:n2}", @item.Total)</td>                            
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>

</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>




<script>


    $(document).ready(function () {
        $('#tablaFacturas').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
            }
        });
    });


</script>

