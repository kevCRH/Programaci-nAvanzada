@model IEnumerable<TiendaMascotas.Entities.ProductoEnt>
@{
    ViewBag.Title = "ProductosVenta";
    Layout = "~/Views/Shared/LayoutProducts.cshtml";
}

<div class="top-header-area" id="sticker">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-sm-12 text-center">
                <div class="main-menu-wrap">
                    <!-- menu start -->
                    <nav class="main-menu">
                        <ul>
                            <li class="current-list-item">
                                <a href="@Url.Action("Index", "Home")">HOME</a>
                            </li>
                            <li>
                                @if (Session["NombreUsuario"] != null)
                                {
                                    <p style="color:#FFFFFF">@Session["NombreUsuario"].ToString()</p>
                                }
                            </li>
                            <li>
                                <div class="header-icons">

                                </div>
                            </li>
                        </ul>
                    </nav>
                    <a class="mobile-show search-bar-icon" href="#"><i class="fas fa-search"></i></a>
                    <div class="mobile-menu"></div>
                    <!-- menu end -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end header -->
<!-- search area -->
<div class="search-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <span class="close-btn"><i class="fas fa-window-close"></i></span>
                <div class="search-bar">
                    <div class="search-bar-tablecell">
                        <h3>Buscar:</h3>
                        <input type="text" placeholder="Escriba palabras claves">
                        <button type="submit">Buscar <i class="fas fa-search"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end search arewa -->
<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Bienvenido/a a nuestra gran variedad de</p>
                    <h1>Productos</h1>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- end breadcrumb section -->
<!-- products -->
<div style="text-align: center;"><a href="@Url.Action("RegistrarProducto", "Productos")" class="btn btn-outline-primary btn-sm">Agregar Producto</a></div>


<div class="product-section mt-150 mb-150">
    <div class="container">

        <div class="row product-lists">


            @foreach (var item in Model)
            {

                <div class="col-lg-4 col-md-6 text-center strawberry">
                    <div class="single-product-item">
                        <div class="product-image">
                            @{
                                var base64 = Convert.ToBase64String(item.imagen);
                                var imagensrc = string.Format("data:image/gif;base64,{0}", base64);
                            }
                            @*<a href="cart.html"><img src="~/assets/imgperros/Ruffos.jpg" alt=""></a>*@
                            <img src="@imagensrc" style="max-height: 1200px; max-width: 900px" />
                        </div>

                        <h1>@item.nombre</h1>
                        <h5>Descripcion: @item.descripcion</h5>
                        <h5>Cantidad: @item.cantidad</h5>
                        <h5>Precio: @item.precio</h5>
                        <h5>Descuento: @item.descuento</h5>

                        <br>
                        <br />
                        <a class="cart-btn" href="@Url.Action("FormProductos", "Productos")"><img src="~/assets/imgs/form.png" alt=""> Agregar a Carrito</a>
                        <br>
                        <br />
                        <a class="cart-btn" href="@Url.Action("ActualizarProducto", "Productos", new { q = item.idProducto})"><img src="~/assets/imgs/form.png" alt="">Actualizar Producto</a>
                        <br>
                        <br />
                        <a class="cart-btn openModal" data-toggle="modal" data-target="#exampleModalCenter" href="#" data-backdrop="static" data-keyboard="false" data-id=@item.idProducto><img src="~/assets/imgs/delete.png" alt="">Eliminar Producto</a>

                        @*<a href="#" class="ti-trash openModal" data-toggle="modal" data-target="#exampleModalCenter"
                            data-backdrop="static" data-keyboard="false" data-id=@item.idProducto></a>*@

                    </div>
                </div>


            }

        </div>
    </div>
</div>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Eliminar Producto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Desea eliminar el Producto?
                <input type="hidden" id="idModalHidden">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="EliminarProducto();">Sí, quiero eliminar el producto</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="~/assets/jsProductos/productos.js"></script>